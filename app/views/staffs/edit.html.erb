<div class="container-fluid">
  <div class="row min-vh-100">
    <div class="col-md-3 col-lg-2 p-0" style="background-color:#e6f0f0;">
      <%= render "layouts/sidebar" %>
    </div>

    <div class="col-md-9 col-lg-10">
      <div class="container py-4">
        <div class="row">
          <div class="col-lg-8 mx-auto">

            <div class="d-flex align-items-center mb-5">
              <h1 class="h4 fw-bold mb-0 me-3">職員情報編集</h1>
              <%= link_to "職員一覧へ戻る", staffs_path, class: "btn btn-secondary btn-sm py-1 px-2" %>
            </div>

            <% if @staff.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @staff.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <%= render "form", staff: @staff %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>