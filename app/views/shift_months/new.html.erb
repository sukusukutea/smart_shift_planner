<div class="container-fluid">
  <div class="row min-vh-100">
    <div class="col-md-3 col-lg-2 p-0" style="background-color:#e6f0f0;">
      <%= render "layouts/sidebar" %>
    </div>

    <div class="col-md-9 col-lg-10 py-4">
      <div class="container px-5">
        <h1 class="h4 fw-bold mb-4">シフト作成（月を選択）</h1>

        <% if @shift_month.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @shift_month.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @shift_month, local: true do |f| %>
          <div class="row g-3 align-items-end">
            <div class="col-auto">
              <%= f.label :year, "年", class: "form-label" %>
              <%= f.number_field :year, class: "form-control", value: Date.today.year %>
            </div>

            <div class="col-auto">
              <%= f.label :month, "月", class: "form-label" %>
              <%= f.number_field :month, class: "form-control", value: Date.today.month, min: 1, max: 12 %>
            </div>

            <div class="col-auto">
              <%= f.submit "作成する",
                    class: "btn btn-primary",
                    data: (
                      @shift_months_count.to_i >= 6 ?
                        { turbo_confirm: "保存上限(６件)を超えているため、古いデータを自動削除して新しい月を作成します。よろしいですか？" } :
                        {}
                    ) %>
            </div>
          </div>
        <% end %>

        <div class="card border-0 bg-light mt-5" style="max-width: 350px;">
          <div class="card-body py-3">
            <h2 class="h5 fw-bold mb-3">作成履歴</h2>
            <p class="text-muted small mb-0">
              直近６件まで保存されます。
            </p>
            <div class="text-muted small mb-2">
              上限を超えた場合、作成日時の古いものから自動削除されます。
            </div>

            <% if @recent_shift_months.present? %>
              <table class="table table-sm align-middle" style="font-size: 12px;">
                <thead>
                  <tr>
                    <th>年月</th>
                    <th>作成日</th>
                    <th class="text-end">操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_shift_months.each do |sm| %>
                    <tr>
                      <td style="white-space: nowrap;"><%= sm.year %>年 <%= sm.month %>月</td>
                      <td class="text-muted" style="white-space: nowrap;"><%= l(sm.created_at) %></td>
                      <td class="text-end">
                        <div class="d-inline-flex gap-1">
                          <%= link_to "閲覧",
                                      shift_month_path(sm),
                                      class: "btn btn-sm btn-light border" %>
                          <%= button_to "削除",
                                      shift_month_path(sm),
                                      method: :delete,
                                      data: { turbo_confirm: "#{sm.year}年#{sm.month}月を削除します。よろしいですか？" },
                                      class: "btn btn-sm btn-light border",
                                      form_class: "m-0" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
                </table>
            <% else %>
              <div class="text-muted small">まだ作成履歴がありません。</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>